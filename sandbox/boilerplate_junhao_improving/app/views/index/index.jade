extends layout

block body
  div(ng-controller='IndexCtrl')
    h2 Hello {{name}}
    p The current time is {{time}}
    ul.menu
      li
        a(href='/') Home
      li
        a(href='/addPost') Add a new post

    div(ng-view)

    div
      | Angular Socket.io seed app: v
