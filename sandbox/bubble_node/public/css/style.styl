/*---------------------------------------------------------
------------------------ CSS RESET ------------------------
---------------------------------------------------------*/ 

html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video
  background transparent
  border 0
  font-size 100%
  margin 0
  outline 0
  padding 0
  vertical-align baseline

body 
  line-height 1
  margin 0

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

nav ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after,
q:before, q:after
  content '' content none

a
  background transparent font-size 100% margin 0 padding 0 vertical-align baseline

ins 
    background-color #ff9 color #000 text-decoration none

mark
  background-color #ff9 color #000 font-style italic font-weight bold

del
  text-decoration line-through

abbr[title], dfn[title]
  border-bottom 1px dotted cursor help

table
  border-collapse collapse border-spacing 0

hr
  border 0 border-top 1px solid #ccc display block height 1px margin 1em 0 padding 0

input, select 
  vertical-align middle

*  
  -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;

.clearfix
  zoom: 1

.clearfix:before,
.clearfix:after
  display table
  content ""
  line-height 0

.clearfix:after 
  clear both

button 
  background none
  border none
  margin 0
  padding 0
  width auto
  overflow visible

/*---------------------------------------------------------
---------------------- MIXINS/VARIBA ----------------------
---------------------------------------------------------*/


dark-color = #011126 // Top menu color.
dark-color-shade = #224253 // Top menu shade.
medium-color = #2F5973 // Sidebar color.
medium-dark-color = #274B61 // Sidebar main active.
light-color = #A5BBC9 // Menu Color.
light-color-shade = #89A5B8 // Shade color for the menu.
icons-color = #7998AA // Color for the sidebar icons.
main-xlight = #95afbf
white-light   =  #F7F8F8

/**********  Font Palette   **********/
/*****    Main Font     *****/
font-main(n)
  font-family            'brandon-grotesque', Arial, Sans-Serif
font-main-black(n)
  font-weight            900
  font-main              0
font-main-bold(n)
  font-weight            700
  font-main              0
font-main-medium(n)
  font-weight            500
  font-main              0
font-main-regular(n)
  font-weight            400
  font-main              0
font-main-light(n)
  font-weight            300
  font-main              0
font-main-thin(n)
  font-weight            100
  font-main              0

font-main-black-11-u(n)
  text-transform         uppercase
  font-size              11px
  font-main-black        0

font-main-tiny-gray(n)
  text-transform         uppercase
  font-size              10px
  std-white-xdark-color  0
  font-main-regular      0

/*****    Main Font     *****/

/*****  Alternate Font  *****/
font-alt(n)
  font-family            'proxima-nova', Arial, Sans-Serif
font-alt-black(n)
  font-weight            900
  font-alt               0
font-alt-extrabold(n)
  font-weight            800
  font-alt               0
font-alt-bold(n)
  font-weight            700
  font-alt               0
font-alt-semibold(n)
  font-weight            600
  font-alt               0
font-alt-regular(n)
  font-weight            400
  font-alt               0
font-alt-light(n)
  font-weight            300
  font-alt               0
font-alt-thin(n)
  font-weight            100
  font-alt               0
/*****  Alternate Font  *****/
/**********  Font Palette   **********/

/**********    Functions    **********/
fontize(family = auto, weight = auto, val-transform = auto, val-size = auto, val-line-height = auto, val-letter-spacing = auto, val-text-decoration = auto, val-text-align = auto)
  if family == main
    font-family    'brandon-grotesque', Arial, Sans-Serif
  else if family == alt
    font-family    'proxima-nova', Arial, Sans-Serif
  if weight == black
    font-weight    900
  else if weight == bold
    font-weight    700
  else if weight == medium
    font-weight    500
  else if weight == regular
    font-weight    400
  else if weight == light
    font-weight    300
  else if weight == thin
    font-weight    100
  text-decoration    val-text-decoration
  letter-spacing     val-letter-spacing
  line-height        val-line-height
  text-align         val-text-align
  text-transform     val-transform
  font-size          val-size


/*---------------------------------------------------------
------------------------- TOP BAR -------------------------
---------------------------------------------------------*/

.top-bar
  z-index 100
  position fixed
  top 0
  left 0
  width 100%
  height 60px
  border-bottom 1px solid dark-color-shade
  background-color dark-color

  .main-logo
    display inline-block
    margin-left 14px
    margin-top 12px
    &:hover
      opacity 0.9

.drop-down
  li
    border-left 1px solid dark-color-shade
    display inline-block
    .drop
      display none

.main-menu
  float right
  a
    letter-spacing 1px
    padding 24px 16px
    display inline-block
    color light-color
    text-decoration none
    fontize(main, bold, uppercase, 12px)
  .notification-menu
    padding 0
    margin 0






/*---------------------------------------------------------
------------------------- SIDEBAR -------------------------
---------------------------------------------------------*/

.sidebar-contianer
  position fixed
  left 0
  height 100%
  .side-bar
    z-index 95
    width 100px
    height 100%
    background-color medium-color
    display block
    position relative
    .sidebar-menu
      padding-top 60px
      li
        list-style none
        display block
        border-bottom      1px solid #436C88

        button
          cursor pointer
          color              main-xlight
          position           relative
          height             80px
          width              100%
          &.active-true,
          &:hover
            color              white-light
            background         medium-dark-color
            .icon
              svg
                fill white-light
          &:focus
            outline none
          span
            fontize(main, 600, uppercase, 10px)
          .name
            display        block
            margin-top     5px
            letter-spacing 0.5px
          .icon
            svg
              fill  main-xlight

        button.active
          -webkit-transition          border-left 0.1s ease-in-out
          -moz-transition             border-left 0.1s ease-in-out
          -ms-transition              border-left 0.1s ease-in-out
          -o-transition               border-left 0.1s ease-in-out
          transition                  border-left 0.1s ease-in-out
          color                       white-light
          background                  medium-dark-color
          border-left                 3px solid main-xlight
          &:after
            content               ' '
            height                0
            width                 0
            position              absolute
            right                 -9px
            top                   50%
            margin-top            -13px
            border                12px solid transparent
            border-left-color     medium-dark-color
            border-left-width     5px
            border-right-width    5px
          .icon
            svg
              fill white-light


.sidebar-menu-content
  position                absolute
  left                    -100px
  background-color        light-color
  top                     60px
  width                   210px
  height                  100%
  opacity                 0
  -webkit-transition      all 0.4s ease-in-out
  -moz-transition         all 0.4s ease-in-out
  -ms-transition          all 0.4s ease-in-out
  -o-transition           all 0.4s ease-in-out
  transition              all 0.4s ease-in-out
  .title
    fontize(main, black, uppercase, 13px)
    padding 14px 17px
    border-bottom 1px solid light-color-shade
    h3
      color medium-color
      float left
      vertical-align middle
      padding 8px 0
    a
      vertical-align middle
      float right
      padding 7px 9px
      border-radius 21px
      background-color medium-color
      text-decoration none
      fontize(main, black, uppercase, 11px)
      font-weight 800
      color light-color
      &:hover
        background-color dark-color
        svg
          -webkit-transform: rotate(-180deg);
          -moz-transform: rotate(-180deg);
          -ms-transform: rotate(-180deg);
          -o-transform: rotate(-180deg);
          -webkit-transition: -webkit-transform 0.5s ease-in-out;
          -moz-transition: -moz-transform 0.5s ease-in-out;
          -o-transition: -o-transform 0.5s ease-in-out;
          transition: transform 0.5s ease-in-out;
          rect
            fill dark-color
      svg
        margin-right 2px
        vertical-align middle
        fill light-color
        rect
          fill medium-color
  .bubbles
    li
      a
        font-family 'proxima-nova', Arial, Sans-Serif
        font-weight 600
        font-size 14px
        display inline-block
        color medium-color
        border-bottom 1px solid light-color-shade
        width 100%
        text-align left
        padding 18px 14px
        text-decoration none
        &:hover
          background-color #98B0C0

.menu-pull
  left 100px
  opacity 1

.mini-footer
  position absolute
  bottom 0
  li
    padding     7px 0
    text-align  center
    &:first-child
      border-top  1px solid #436C88
    p,span
      fontize(alt, medium, uppercase, 8.4px)
      color main-xlight
    p
      padding-bottom 7px
  .info
    background-color        dark-color
    .name
      font-size         10px
      vertical-align     middle
    .icon
      svg
        width             22px
        height            22px
        vertical-align    middle
        margin-right      7px




