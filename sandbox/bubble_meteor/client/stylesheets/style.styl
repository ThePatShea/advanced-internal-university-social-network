/**********   Properties    **********/
border-thin(color)
  border                 1px solid color

border-box(n)
  -webkit-box-sizing     border-box
  -moz-box-sizing        border-box
  box-sizing             border-box

border-radius(n)
  -webkit-border-radius  n
  -moz-border-radius     n
  border-radius          n
/**********   Properties    **********/


/**********     Buttons     **********/
std-btn(n)
  text-transform         uppercase
  padding                8px 15px
  border-radius          15px
  font-size              11px

.std-btn-light
  border-thin            #BECDD5
  color                  #2E5972
  font-main-bold         0
  std-btn                0

.std-btn-dark
  background             rgba(0,0,0,.35)
  border-thin            #95AFBF
  color                  #94AEBF
  font-main-black        0
  std-btn                0
/**********     Buttons     **********/


/**********      Icons      **********/
.cb-icon
  vertical-align         top

.cb-icon-light
  main-light-fill        0
