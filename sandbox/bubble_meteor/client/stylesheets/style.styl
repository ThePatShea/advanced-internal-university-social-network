/**********   Properties    **********/
border-thin-top-btm(color)
  border-bottom          1px solid color
  border-top             1px solid color

border-thin(color)
  border                 1px solid color

border-box(n)
  -webkit-box-sizing     border-box
  -moz-box-sizing        border-box
  box-sizing             border-box

border-radius(n)
  -webkit-border-radius  n
  -moz-border-radius     n
  border-radius          n
/**********   Properties    **********/


/**********     Buttons     **********/
std-btn(n)
  text-transform         uppercase
  padding                8px 15px
  border-radius          15px
  font-size              11px
  main-xlight-border     0

.std-btn-light
  main-light-color       0
  font-main-bold         0
  std-btn                0

.std-btn-dark
  background             rgba(0,0,0,.35)
  main-xlight-color      0
  font-main-black        0
  std-btn                0
/**********     Buttons     **********/


