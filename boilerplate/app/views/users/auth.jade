extends ../layouts/auth

block main
  .row
    .offset1.span5
      h1 sign in / sign up
      a(href="/auth/facebook")
        img(src="/img/facebook.png")
    .span6
      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li= error.type

      block auth
