extends ../layouts/default

block content
  - var action = '/bubbles'
  if (!new_bubble.isNew)
    - action += '/'+new_bubble.id

  if (typeof errors !== 'undefined')
    .fade.in.alert.alert-block.alert-error
      a.close(data-dismiss="alert", href="javascript:void(0)") x
      ul
        each error in errors
          li= error.type

  form.form-horizontal(method="post", action=action)
    if (!new_bubble.isNew)
      input(type="hidden", name="_method", value="PUT")

    .control-group
      label.control-label(for='title') Name
      .controls
        input#title.input-xlarge(type='text', maxlength="35", name="name", value=new_bubble.name, placeholder='ex: Club Soccer')

    .control-group
      label.control-label(for='desc') Description
      .controls
        textarea#desc.input-xxlarge(type='text', rows="5", name="body", placeholder='Describe your group')=new_bubble.body

    .form-actions
      button.red_button(type='submit') create

  //include ../payment/form // For stripe payment, when we're ready to implement them.
