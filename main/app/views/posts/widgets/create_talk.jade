extends templates/create/create_template

block button_text
  | start a talk

block form
  input#title.requiredInput.input-xlarge(type='text', maxlength="35", name="name", placeholder='Subject')

  textarea#description.requiredInput.input-xlarge(type='text', rows="5", name="description", placeholder='Start your discussion')

  button#submitBtn.submit_event.red_button(type='submit') create
    p.warning.descriptor.red_text Please fill in every field before creating your talk
