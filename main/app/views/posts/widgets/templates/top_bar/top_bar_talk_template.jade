extends templates/top_bar_template

block top_bar_main
  block post_name

  section.subtitle.descriptor
    div.icon_views
    div.views_text.colorize_text_green #{post.connections.users.viewed.length}
    div.gray_text.last_reply_text
      if (post.comments.length > 0)
        | Last reply #{moment(post.comments[post.comments.length - 1].createdAt).fromNow()}
      else
        | Posted #{moment(post.createdAt).fromNow()}

block connect_post
  button.button_connect_post.button_reply

block post_source
  include ../../post_source_user
