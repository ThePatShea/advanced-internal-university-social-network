extends ../layouts/auth

block content
  #skiptomain.landing_page
      #wrapper
        #headcontainer
          header
            img(src='img/auth/logo.png', width='110', height='116', alt='Emory Bubble')
            h1 Next generation university collaboration
            .buttonitem
              a.button(href='/auth/facebook') LOG IN WITH FACEBOOK
              a.button(href='https://getsatisfaction.com/emorybubble') GIVE FEEDBACK
        #middlecontainer
          img.slider2(src='img/auth/slider.png', width='513', height='350', alt='Emory Bubble')
          #maincontentcontainer
            #maincontent
              .section.group(style='margin-top: 45px; text-align: center;')
                .col.span_1_of_3
                  h3 Gather
                  p Make a Bubble for your study group, organization, pickup team, class, etc
                .col.span_1_of_3
                  h3 Collaborate
                  p Add your peers and start discussions, maintain a calendar, and add comments
                .col.span_1_of_3
                  h3 Publish
                  p Post events and content publicly for the whole community to interact and follow
        #footercontainer
          .footeritem
            .floatleft.footerlinks.left_links
              h5
                a(href='/auth/facebook') TRY BETA
                span.footerspacer | 
                a(href='https://getsatisfaction.com/emorybubble') LEAVE FEEDBACK
                span.footerspacer | 
                a(href='http://thecampusbubble.com/contact') CONTACT
            .floatleft.footerlogo
              img(src='img/auth/footerimg.png', width='57', height='78', alt='Emory Bubble')
            .floatleft.footerlinks.right_links
              h5
                span.footerspacer COPYRIGHT 2013 | 
                a(href='http://www.thecampusbubble.com') POWERED BY CAMPUS BUBBLE
  
