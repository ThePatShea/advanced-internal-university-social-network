extends ../layouts/auth

block content
  #skiptomain.landing_page
      #wrapper
        #headcontainer
          header
            img(src='img/auth/logo.png', width='110', height='116', alt='Emory Bubble')
            h1 Next generation university collaboration
            .buttonitem
              a.button(href='/auth/facebook') LOG IN WITH FACEBOOK
              a.button(href='https://getsatisfaction.com/emorybubble') GIVE FEEDBACK
        #middlecontainer
          center
              .iosSlider
                  .slider
                    #item1.item
                      img.bg_image(src='img/auth/slider/slide1.png')
                     -// .text1
                     -//   span Freedom
                     -// .text2
                     -//   span
                     -//     | to collaborate with your
                     -//     br
                     -//     | campus groups on any device
                    #item2.item
                      img.bg_image(src='img/auth/slider/slide2.png')
                     -// .text1
                     -//   span Emory
                     -// .text2
                     -//   span
                     -//     | identity in one app - 
                     -//     br
                     -//     | keep up with all your interests,
                     -//     br
                     -//     | organizations, and more
                    #item3.item
                      img.bg_image(src='img/auth/slider/slide3.png')
                     -// .text1
                     -//   span Create
                     -// .text2
                     -//   span
                     -//     | a Bubble to get started - 
                     -//     br
                     -//     | upload a picture and some details, 
                     -//     br
                     -//     | then easily add other members
                    #item4.item
                      img.bg_image(src='img/auth/slider/slide4.png')
                     -// .text1
                     -//   span Establish
                     -// .text2
                     -//   span
                     -//     | your Bubble - publish events and 
                     -//     br
                     -//     | start discussions privately or publicly, 
                     -//     br
                     -//     | engage each other or the whole community
                  .iosSliderButtons
                    .button
                    .button
                    .button
                    .button
          #maincontentcontainer
            #maincontent
              .section.group(style='text-align: center;')
                .col.span_1_of_3
                  h3 Gather
                  p Make a Bubble for your study group, organization, pickup team, class, etc
                .col.span_1_of_3
                  h3 Collaborate
                  p Add your peers and start discussions, maintain a calendar, and add comments
                .col.span_1_of_3
                  h3 Publish
                  p Post events and content publicly for the whole community to interact and follow
        #footercontainer
          .footeritem
            .floatleft.footerlinks.left_links
              h5
                a(href='/auth/facebook') TRY BETA
                span.footerspacer | 
                a(href='https://getsatisfaction.com/emorybubble') LEAVE FEEDBACK
                span.footerspacer | 
                a(href='http://thecampusbubble.com/contact') CONTACT
            .floatleft.footerlogo
              img(src='img/auth/footerimg.png', width='57', height='78', alt='Emory Bubble')
            .floatleft.footerlinks.right_links
              h5
                span.footerspacer COPYRIGHT 2013 | 
                a(href='http://www.thecampusbubble.com') POWERED BY CAMPUS BUBBLE
  
