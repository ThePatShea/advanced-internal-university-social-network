header#header
  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/')
          div.bubble_logo
        div
          ul.nav
          ul.nav.pull-right
            li
              a(href='/')
                div.icon_header_home
            li
              a(href="/users/#{req.user.id}/new_bubble")
                div.icon_header_create
            li
              a(href="/notifications")
                div.icon_header_notifications
                if (req.user.total_unseen_notifications > 0)
                  div.header_counter
                    h2 #{req.user.total_unseen_notifications}
            if (req.isAuthenticated())
              div.user_widget
                a(href="/users/"+req.user.id)
                  h3= req.user.name
                  div.nav_pic_square_bg
                    img.nav_pic_square(src='http://graph.facebook.com/'+req.user.facebook.id+'/picture?type=square')
              li.sign_out_button
                a(href="/logout", title="logout")
                  div.icon_header_sign_out
            else
              li
                a(href="/login", title="Login") Sign In
